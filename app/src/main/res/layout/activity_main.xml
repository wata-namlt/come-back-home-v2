<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bbbkakashi.calculator_1442061.MainActivity"
    android:background="#080404">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MC"
                android:id="@+id/btnMC"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MR"
                android:id="@+id/btnMR"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="M-"
                android:id="@+id/btnMTru"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="M+"
                android:id="@+id/btnMCong"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:id="@+id/btnXoa"
                android:layout_weight="2"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:nestedScrollingEnabled="true"
                android:onClick="xoaTrang" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/btnChiaDu"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnChia"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:id="@+id/btnNhan"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnTru"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnCong"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/btn0"
                android:layout_column="0"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:id="@+id/btn00"
                android:layout_column="1"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonNotice" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/btncham"
                android:layout_column="2"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#615f5f"
                android:textColor="#ffffff"
                android:onClick="buttonOnClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/btnBang"
                android:layout_column="3"
                android:layout_weight="1"
                android:height="60dp"
                android:textSize="20dp"
                android:backgroundTint="#2e2828"
                android:textColor="#ffffff" />
        </TableRow>
    </TableLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPhepTinh"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tableLayout"
        android:password="false"
        android:singleLine="false"
        android:enabled="false"
        android:focusable="false"
        android:editable="false"
        android:allowUndo="false"
        android:autoText="false"
        android:drawableTint="#fdfdfd"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:contextClickable="false"
        android:gravity="right"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColorLink="#ffffff"
        android:textColor="#fbf8f8"
        android:background="#4e4b4b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtKetQua"
        android:gravity="right"
        android:text="0.0"
        android:textSize="50dp"
        android:clickable="false"
        android:contextClickable="false"
        android:background="#4e4b4b"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtPhepTinh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:editable="false" />

</RelativeLayout>
